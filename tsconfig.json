{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020", // Target modern Node.js versions
    "lib": ["es2020"],
    "outDir": "out",
    "rootDir": "src",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true, // Recommended for CommonJS/ES module interop
    "skipLibCheck": true, // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true // Prevent case-sensitive path issues
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", ".vscode-test"]
}
