{
    "name": "stdl",
    "displayName": "STDL",
    "description": "State Transition Description Language",
    "icon": "images/icon.png",
    "publisher": "jbaker8935",
    "license": "MIT",
    "licenseFile": "LICENSE.md",
    "version": "0.1.3",
    "engines": {
        "vscode": "^1.59.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/jbaker8935/stdl.git"
    },
    "activationEvents": [
        "onLanguage:stdl",
        "onDebug",
        "onCommand:stdl.showStateDiagram",
        "onCommand:stdl.showSequenceDiagram"
    ],
    "main": "./out/extension.bundle.js",
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [
            {
                "id": "stdl",
                "aliases": [
                    "STDL",
                    "stdl"
                ],
                "extensions": [
                    "stdl"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "stdl",
                "scopeName": "source.stdl",
                "path": "./syntaxes/stdl.tmLanguage.json"
            }
        ],
        "commands": [
            {
                "command": "stdl.debugStateMachine",
                "title": "stdl: Debug State Machine",
                "category": "stdl",
                "icon": "$(debug-alt)"
            },
            {
                "command": "stdl.showAllStates",
                "title": "stdl: Show All States",
                "category": "stdl",
                "icon": "$(list-tree)"
            },
            {
                "command": "stdl.showStateDiagram",
                "title": "STDL: Show State Diagram",
                "category": "STDL"
            },
            {
                "command": "stdl.showSequenceDiagram",
                "title": "STDL: Show Debug Sequence Diagram",
                "category": "STDL"
            },
            {
                "command": "stdl.showStateDiagramContext",
                "title": "Show State Diagram (Mermaid)",
                "category": "STDL"
            }
        ],
        "menus": {
            "editor/title": [
                {
                    "when": "resourceLangId == stdl",
                    "command": "stdl.debugStateMachine",
                    "group": "navigation"
                }
            ],
            "commandPalette": [
                {
                    "command": "stdl.debugStateMachine",
                    "when": "resourceLangId == stdl"
                },
                {
                    "command": "stdl.showAllStates",
                    "when": "resourceLangId == stdl"
                }
            ],
            "explorer/context": [
                {
                    "command": "stdl.showStateDiagramContext",
                    "title": "Show State Diagram (Mermaid)",
                    "when": "resourceLangId == stdl"
                }
            ],
            "editor/context": [
                {
                    "command": "stdl.showStateDiagram",
                    "title": "Show State Diagram",
                    "when": "resourceLangId == stdl"
                }
            ]
        },
        "debuggers": [
            {
                "type": "stdl",
                "label": "stdl Debugger",
                "program": "./out/extension.js",
                "configurationAttributes": {
                    "launch": {
                        "required": [
                            "program"
                        ],
                        "properties": {
                            "program": {
                                "type": "string",
                                "description": "Absolute path to the stdl file to debug.",
                                "default": "${file}"
                            }
                        }
                    }
                }
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run bundle",
        "compile": "tsc -b",
        "bundle": "npm run compile && esbuild ./out/extension.js --bundle --outfile=./out/extension.bundle.js --platform=node --target=node18 --minify --external:vscode",
        "watch": "tsc -b -w",
        "lint": "eslint src --ext ts"
    },
    "devDependencies": {
        "@types/glob": "^8.0.0",
        "@types/mocha": "^10.0.0",
        "@types/node": "18.x",
        "@types/vscode": "^1.59.0",
        "@typescript-eslint/eslint-plugin": "^5.59.8",
        "@typescript-eslint/parser": "^5.59.8",
        "esbuild": "^0.25.4",
        "eslint": "^8.41.0",
        "glob": "^10.2.5",
        "mermaid": "^10.9.0",
        "mocha": "^10.2.0",
        "typescript": "^5.1.3"
    },
    "dependencies": {
        "@vscode/debugadapter": "^1.68.0",
        "@vscode/debugprotocol": "^1.68.0",
        "vscode-languageclient": "^7.0.0",
        "vscode-languageserver": "^7.0.0",
        "vscode-languageserver-textdocument": "^1.0.12"
    }
}
